      "start": {
        "borderColor": "#10B981"
      },
      "agent": {
        "borderColor": "#3B82F6"
      },
      "condition": {
        "borderColor": "#F59E0B"
      },
      "human": {
        "borderColor": "#8B5CF6"
      },
      "end": {
        "borderColor": "#EF4444"
      }
    }
