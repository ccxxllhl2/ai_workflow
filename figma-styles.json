    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)"
  },
  "components": {
    "button": {
      "primary": {
        "background": "linear-gradient(135deg, #10B981 0%, #059669 100%)",
        "color": "#FFFFFF",
        "padding": "12px 24px",
        "borderRadius": "12px",
        "fontSize": "14px",
        "fontWeight": "500",
        "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"
      },
      "secondary": {
        "background": "linear-gradient(135deg, #6B7280 0%, #4B5563 100%)", 
        "color": "#FFFFFF",
        "padding": "12px 24px",
        "borderRadius": "12px",
        "fontSize": "14px",
        "fontWeight": "500"
      }
    },
    "card": {
      "base": {
        "background": "#FFFFFF",
        "borderRadius": "16px",
        "shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
        "border": "1px solid #E5E7EB",
        "padding": "24px"
      }
    },
    "input": {
      "base": {
        "background": "#FFFFFF",
        "border": "1px solid #D1D5DB",
        "borderRadius": "6px", 
        "padding": "8px 12px",
        "fontSize": "14px",
        "height": "40px"
      },
      "focus": {
        "borderColor": "#3B82F6",
        "boxShadow": "0 0 0 3px rgba(59, 130, 246, 0.1)"
      }
    },
    "node": {
      "base": {
        "width": "120px",
        "height": "80px",
        "background": "#FFFFFF",
        "borderRadius": "8px", 
        "borderWidth": "2px",
        "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"
